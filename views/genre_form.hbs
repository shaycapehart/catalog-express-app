<h1>{{title}}</h1>
<form method="POST" action="">
  <div class="form-group">
    <label for="name">Genre:</label>
    {{#if genre}}
    <input id="name" type="text" placeholder="Fantasy, Poetry etc." name="name" value="{{genre.name}}"
      class="form-control">
    {{else}}
    <input id="name" type="text" placeholder="Fantasy, Poetry etc." name="name" class="form-control">
    {{/if}}
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
{{#if errors }}
<ul>
  {{#each errors as |error|}}
  <li>{{error.msg}}</li>
  {{/each}}
</ul>
{{/if}}